<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ NHÂN SỰ"
            android:textSize="24sp"
            android:textColor="#2196F3"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPOLY SOFTWARE COMPANY "
            android:textSize="24sp"
            android:textColor="#F44336"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <Button
            android:id="@+id/btnPhongBan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phòng Ban"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="#E31212"
            android:textSize="24sp"
            android:drawableTop="@drawable/ic_business_24"
            android:layout_marginEnd="10dp"/>

        <Button
                android:id="@+id/btnNhanSu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nhân Sự"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:drawableTop="@drawable/ic_group_24"/>
    </LinearLayout>

    <Button
            android:id="@+id/btnThoat"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="#0E0E0E"
            android:textSize="24sp"
            android:drawableTop="@drawable/ic_exit"/>

</LinearLayout>